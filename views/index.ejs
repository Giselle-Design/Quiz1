<%- include("./partials/header.ejs") %>


    <div class="container">
        <% for(let cluck of clucks ) { %>
            <div class="card mt-5 mb-5" >
                <div class="card-body>
                    <div class="card-title"><%= cluck.username %><span><div class="date"><em><%= (cluck.createdAt).toLocaleString() %></em></span>
                </div>
                  <p class="card-subtitle mb-2; mt-2; text-muted"><%= cluck.content %> </p>

                  <% if (cluck.imageUrl) { %>
                      <div><img src="<%= cluck.imageUrl %>" class="card-img width:100, height:100" alt=""></div>
                  <% } else { %>
                      <div><img src="images/default.jpg" class="card-img" alt="" ></div>
                  <% } %>

                    <form method="POST" action="/clucks/ <%= cluck.id %>" style="margin-top: 2em">
                        <input type="hidden" name="_method" value="DELETE" />
                        <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger btn-lg" />
                    </form>
                </div>
            </div>
        <% } %>
    </div>
<%- include("./partials/footer.ejs") %>
